
{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "data": {
      "url": "https://raw.githubusercontent.com/krisztakiraly01/krisztakiraly01.github.io/main/salaries.csv",
        "format":{"type":"csv"}
    },
    "transform": [
      {
        "filter": {
          "field": "salary_in_usd",
          "range": [0, 150000] 
        }
      }
    ],
    "selection": {
      "salaryRange": {
        "type": "interval", 
        "bind": "scales", 
        "fields": ["salary_in_usd"], 
        "encodings": ["x"], 
        "init": {"x": [0, 150000]} 
      }
    },
    "mark": {"type": "circle", "size": 100},
    "encoding": {
      "y": {"field": "job_title", "type": "nominal", "title": "Pozició"},
      "x": {"field": "salary_in_usd", "type": "quantitative", "title": "Fizetés"},
      "color": {"field": "salary_in_usd", "type": "quantitative","title": "Fizetés"},
      "size": {"field": "salary_in_usd", "type": "quantitative"},
      "tooltip": [
        {"field": "job_title", "type": "nominal", "title": "Pozició: "},
        {"field": "salary_in_usd", "type": "quantitative","title": "Fizetés: "}
      ]
    },
    "width": 500,
    "height":500
  }
  