{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "description": "Diverging stacked bar chart with neutral parts showing the number of employees working remotely by company location.",
    "data": {
      "url": "https://raw.githubusercontent.com/krisztakiraly01/krisztakiraly01.github.io/main/salaries.csv",
      "format": {"type": "csv"}
    },
    "transform": [
      {
        "aggregate": [
          {"op": "count", "as": "num_employees"}
        ],
        "groupby": ["company_location", "remote_ratio"]
      },
      {
        "calculate": "datum.remote_ratio === '0%' ? 'Neutral' : datum.remote_ratio",
        "as": "remote_ratio_cleaned"
      }
    ],
    "mark": {
      "type": "bar",
      "filled": true
    },
    "encoding": {
      "y": {
        "field": "company_location",
        "type": "nominal",
        "title": "Ország"
      },
      "x": {
        "aggregate": "sum",
        "field": "num_employees",
        "type": "quantitative",
        "title": "Alkalmazottak száma"
      },
      "color": {
        "field": "remote_ratio",
        "type": "nominal",
        "title": "Munkavégzés helye",
        "scale": {
          "range": ["#08519c", "#3182bd", "#6baed6"]
        }
      },
      "tooltip": [
        {"field": "company_location", "type": "nominal", "title": "Company Location"},
        {"field": "remote_ratio", "type": "nominal", "title": "Remote Ratio"},
        {"field": "num_employees", "type": "quantitative", "title": "Number of Employees"}
      ]
    },
    "config": {
      "view": {"stroke": "transparent"},
      "axis": {"grid": false}
    },
    "width": 700,
    "height": 500
  }
  