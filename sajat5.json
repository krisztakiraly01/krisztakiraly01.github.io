
{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "data": {
      "url": "https://raw.githubusercontent.com/krisztakiraly01/krisztakiraly01.github.io/main/salaries.csv",
        "format":{"type":"csv"}
    },
    "transform": [
      {"aggregate": [{"op": "mean", "field": "salary_in_usd", "as": "average_salary"}]}
    ],
    "layer": [
      {
        "mark": "line",
        "encoding": {
          "x": {"field": "work_year", "type": "temporal", "title": "Munkaév"}
        }
      },
      {
        "mark": {"type": "rule", "color": "red"},
        "encoding": {
          "y": {"field": "average_salary", "type": "quantitative", "title": "Átlagos fizetés"}
        }
      }
    ],
    "width":700,
    "height":400
  }